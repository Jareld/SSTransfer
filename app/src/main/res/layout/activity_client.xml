<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/test_bg"
              android:keepScreenOn="true"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="40dp"
                      android:orientation="vertical">

            <Button android:id="@+id/search_device" android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/test_button_4"
                    android:text="搜索设备"
            />
            <Button android:id="@+id/connect_device" android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@mipmap/test_button_4"
                    android:text="连接设备"
            />
            <Button
                android:id="@+id/stop_connect" android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@mipmap/test_button_4"
                android:text="断开连接"
            />
            <Button android:id="@+id/send_file" android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@mipmap/test_button_4"
                    android:text="发送文件"
            />



        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="30dp"
                      android:layout_marginTop="20dp"
                      android:layout_marginRight="40dp"
                      android:orientation="vertical">
            <TextView android:id="@+id/connect_info" android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#000000"
                      android:textSize="15sp"
            />
            <android.support.v7.widget.RecyclerView android:id="@+id/devices"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_weight="1"></android.support.v7.widget.RecyclerView>

            <LinearLayout android:id="@+id/ll_has_connected"
                          android:layout_marginTop="20dp"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:visibility="gone">

                <LinearLayout android:layout_width="240dp" android:layout_height="wrap_content"
                              android:layout_weight="1" android:orientation="vertical">

                    <TextView android:id="@+id/ll_has_connected_tv_name"
                              android:layout_width="240dp"
                              android:layout_height="wrap_content"
                              android:ellipsize="marquee"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
                              android:textColor="#ff0000"/>
                    <TextView android:id="@+id/ll_has_connected_tv_address"
                              android:layout_width="240dp"
                              android:layout_height="wrap_content"
                              android:ellipsize="marquee"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:marqueeRepeatLimit="marquee_forever"
                              android:singleLine="true"/>

                </LinearLayout>


                <ImageView android:id="@+id/ll_has_connected_item_connect"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:background="@mipmap/fangkuang"
                           android:clickable="false"
                           android:src="@mipmap/dagou"
                />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView android:id="@+id/tv_trans_file_client" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:singleLine="true"
              android:focusableInTouchMode="true"
              android:visibility="visible"
              android:ellipsize="marquee"
              android:layout_marginLeft="40dp"
              android:text="点击发送文件进行文件传输"></TextView>
    <com.example.jareld.samsontransferclient.FlikerProgressBar android:id="@+id/fliker_progress"
                                                               android:layout_width="360dp"
                                                               android:layout_height="wrap_content"
                                                                android:layout_marginLeft="60dp"
                                                               android:layout_marginTop="20dp"
                                                               android:layout_marginRight="20dp"
                                                               app:borderWidth="3dp"
                                                               app:radius="15dp"
                                                               app:textSize="15sp"
                                                               android:visibility="invisible"
    />

</LinearLayout>